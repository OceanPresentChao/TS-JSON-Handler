{
  "compileOnSave": false,
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "pretty": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "downlevelIteration": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "@types/node"
    ],
    "baseUrl": ".",
    "paths": {
      "@": [
        "src/"
      ]
    },
    "lib": [
      "es2017",
      "dom",
      "es2015.generator",
      "es2015.promise",
      "esnext.asynciterable"
    ]
  },
  "extends": "@tsconfig/node16-strictest-esm/tsconfig.json"
}